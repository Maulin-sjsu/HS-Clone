<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <article class="speakerslist maincontent">
        <h1 class="speakerslist-title"><%=speakers.title%></h1>
        <div class="speakerslist-name">
          with
          <a href="/speakers/<%=speakers.shortname%>"><%=speakers.name%></a>
        </div>
        <p class="speakerslist-info mt-2"> 
          <a href="/speakers/<%=speakers.shortname%>"></a>
          <img class="speakerslist-img img-fluid" 
               src="/images/speakers/<%=speakers.shortname%>.jpg" 
          alt="Photo of <%=speakers.name%>">
        </p>
        <%-speakers.description%>
        <p></p>
      </article>
    </div>
    <aside class="col-md-4">
      <%- include('./partials/artwork')%>
    </aside>
  </div>
</div>

  